<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ui.fragment.DetailFragment">


    <ImageView
        android:id="@+id/frDetailImageViewProfilePicture"
        android:layout_width="268dp"
        android:layout_height="218dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        tools:ignore="contentDescription"/>

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="387dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frDetailImageViewProfilePicture">

        <TextView
            android:id="@+id/frDetailTextViewId"
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:hint="Id"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            tools:text="Id" />

        <TextView
            android:id="@+id/frDetailTextViewName"
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:hint="Name"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            tools:text="Name" />

        <TextView
            android:id="@+id/frDetailTextViewEmail"
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:hint="Email"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            tools:text="Email" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>